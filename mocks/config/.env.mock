# Mock Server Configuration
# Copy this file to .env.mock and customize as needed

# Server settings
MOCK_PORT=8888
MOCK_HOST=0.0.0.0
MOCK_TITLE=Postcode API Mock Server
MOCK_VERSION=1.0.0

# Behavior settings - Response delay simulation
MOCK_ENABLE_RESPONSE_DELAY=false
MOCK_MIN_DELAY_MS=10
MOCK_MAX_DELAY_MS=100

# Error simulation
MOCK_ERROR_SIMULATION_ENABLED=false
MOCK_ERROR_RATE=0.05

# Data settings
MOCK_DATA_SIZE=500
MOCK_USE_FIXTURES=true
MOCK_FIXTURES_PATH=mocks/fixtures

# Features
MOCK_ENABLE_STATEFUL_MODE=true
MOCK_ENABLE_DEBUG_ENDPOINTS=true
MOCK_ENABLE_STATISTICS=true

# CORS
MOCK_CORS_ENABLED=true

# Logging
MOCK_LOG_LEVEL=INFO
MOCK_LOG_REQUESTS=true
MOCK_LOG_RESPONSES=false

# Cache simulation
MOCK_ENABLE_MOCK_CACHE=true
MOCK_CACHE_HIT_RATE=0.75
